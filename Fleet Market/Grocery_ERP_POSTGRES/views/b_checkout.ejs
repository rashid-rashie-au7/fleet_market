<body>
<!-- ========================= SECTION CONTENT ========================= -->
<header class="section-header">
<section class="header-main border-bottom">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-xl-2 col-lg-3 col-md-12">
				<h2>Fleet Market</h2>
			</div>
			<div class="col-xl-6 col-lg-5 col-md-6">
				<form action="#" class="search-header">
					<div class="input-group w-100">
					    <input type="text" class="form-control" placeholder="Search">					    
					    <div class="input-group-append">
					      <button class="btn btn-primary" type="submit">
					        <i class="fa fa-search"></i> Search
					      </button>
					    </div>
				    </div>
				</form>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-6">
				<div class="widgets-wrap float-md-right">
					<div class="widget-header mr-3">
						<p style="font-size: 18px; font-style: oblique ;"> Hi ,<%=user.fname%></p>
					  </div>
				  	<div class="widget-header mr-3">
						<a href="/homebuyer" class="widget-view">
							<div class="icon-area">
								<i class="fa fa-home" style="color: darkorange;"></i>
							</div>
							<small class="text"> Home </small>
						</a>
					</div>
					<div class="widget-header">
						<a href="/mycart" class="widget-view">
							<div class="icon-area">
								<i class="fa fa-shopping-cart" style="color: darkorange;"></i>
								<span class="notify">1</span>
							</div>
							<small class="text"> Cart </small>
						</a>
					</div>
					<div class="widget-header mr-3">
						<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-user" style="color: darkorange;"></i> Accounts </a>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="/myprofile"><i class="fa fa-user-circle"></i> My Profile</a>
							<a class="dropdown-item" href="/myorders"><i class="fa fa-store"></i> My Orders</a>
							<a class="dropdown-item" href="/mywishlist"><i class="fa fa-heart"></i>  Wishlist</a>
							<a class="dropdown-item" href="/logout"><i class="fa  fa-lock"></i>  Logout</a>
						  </div>
						</a>
					</div>
				</div> 
			</div> 
		</div> 
	</div> 
</section>
<nav class="navbar navbar-main navbar-expand-lg border-bottom">
	<div class="container">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="main_nav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="/category/?cat=Grocery">Grocery</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Kitchen Accessories">Kitchen Accessories</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Essentials">Essentials</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Beverages">Beverages</a>
				</li>
			</ul>
		</div> 
	</div> 
</nav>
</header>
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
	<div class="container">
		<div class="row">
		<main class="col-md-9">
			
			<div class="card">
			<table class="table table-borderless table-shopping-cart">
			<thead class="text-muted">
				<tr class="small text-uppercase">
					<th scope="col" width="30">sl.no</th>
					<th scope="col"width="200">Product</th>
					<th scope="col" width="80">Quantity</th>
					<th scope="col" width="80">Price</th>
					<th scope="col" width="70">Total</th>
					<th scope="col" class="text-right" width="80"> </th>
				</tr>
			</thead>
			<tbody>
				<%prdts.forEach(function(ele) {%>	
				<tr>
					<td> 
						<var>1</var> 
					</td>
					<td>
						<a href="/detailproduct/?id=<%= ele.prdtid %>" class="title text-dark"><%=ele.prdtname%> </a>
						
					</td>
					<td> 
						<%var qty= 0 , price = (ele.price).toFixed(2) , off =ele.offer, offer%>
						<%cart.forEach(function(each){%>
							<%if(each.prdit==ele.prdit){ qty=each.qty %>
						<var class="text"><%= qty %></var>
						<%}}) %>
					</td>
					<td> 
						<% offer = price - ((price* off)/100) %>
						<% total = (offer*qty) %>
						<div class="price-wrap"> 
							<var class="price">₹ <%=Math.round(offer*2)/2 - 0.01 %></var> 
							<small class="text-muted"> ₹<%=price %></small> 
						</div>
					</td>
					<td> 
						<var class="price">₹<%= total%></var> 
					</td>
					<td > 
						<a href="#" class="btn btn-light btn-round"> Remove</a>
					</td>
				</tr>
				<%})%>
			</tbody>
			</table>
			<div class="card-body border-top">
				<div class="col-md-10">
					<div class="info-main">
						<div class="form-row">
							<div class="col form-group">
								<label>First Name </label>
								  <input type="text"name="name" class="form-control" placeholder="" value="<%=user.fname%>">
							</div>
							<div class="col form-group">
								<label>Last Name</label>
								  <input type="text" name="offer"class="form-control" placeholder=" "  value="<%=user.lname%>">
							</div> 
						</div>
						<div class="form-row">
							<div class="col form-group">
								<label>Email </label>
								  <input type="text"name="name" class="form-control" placeholder="" value="<%=user.email%>">
							</div>
							<div class="col form-group">
								<label>Mobile</label>
								  <input type="number" name="offer"class="form-control" placeholder=" "  value="<%=user.mobile%>">
							</div> 
						</div>
						<div class="form-row">
							<div class="col form-group">
								<label>Home </label>
								  <input type="text"name="name" class="form-control" placeholder="" value="<%=user.home%>">
							</div>
							<div class="col form-group">
								<label>Street</label>
								  <input type="text" name="offer"class="form-control" placeholder=" "  value="<%=user.street%> ">
							</div> 
						</div>
						<div class="form-row">
							<div class="col form-group">
								<label>City </label>
								  <input type="text"name="name" class="form-control" placeholder="" value="<%=user.city%>">
							</div>
							<div class="col form-group">
								<label>State</label>
								  <input type="text" name="offer"class="form-control" placeholder=" "  value="<%=user.state%>">
							</div> 
						</div>
						<div class="form-row">
							<div class="col form-group">
								<label>PO Box</label>
								  <input type="text"name="name" class="form-control" placeholder="" value="<%=user.po%>">
							</div>
							<div class="col form-group">
								<label>PB Number</label>
								  <input type="number" name="offer"class="form-control" placeholder=" "  value="<%=user.pin%>">
							</div> 
						</div>
					</div>
				</div>
				<form method="POST" action="/checkout">
				<button class="btn btn-primary float-md-right"> Check Out <i class="fa fa-chevron-right"></i> </button>
				</form>
			</div>	
			</div> 
		</main> <!-- col.// -->
		<aside class="col-md-3">
			
			<div class="card">
				<div class="card-body">
						<dl class="dlist-align">
						<dt>Total price:</dt>
						<dd class="text-right">USD 568</dd>
						</dl>
						<dl class="dlist-align">
						<dt>Discount:</dt>
						<dd class="text-right">USD 658</dd>
						</dl>
						<dl class="dlist-align">
						<dt>Total:</dt>
						<dd class="text-right  h5"><strong>$1,650</strong></dd>
						</dl>
						<hr>
						<div><p class="text-center mb-3">
							<img src="images/misc/payments.png" height="26">
						</p>
						</div>
									
				</div>
			</div> 
	
		</aside> 
		</div>

		
		<div >
			<a href="#" class="btn btn-outline-primary"> <i class="fa fa-shopping-cart"></i> Start Shopping </a>
		</div> 
		 

	</div>
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<!-- ========================= FOOTER ========================= -->
<footer class="section-footer bg-secondary">
	<div class="container">
		<section class="footer-bottom text-center">
			<p class="text-muted"> Grocery ERP Managment System</p>
		</section>
	</div>
</footer>
<!-- ========================= FOOTER END // ========================= -->
</body>
</html>