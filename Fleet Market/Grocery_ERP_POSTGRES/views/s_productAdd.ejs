<!DOCTYPE HTML>
<html lang="en">

<head>
<meta charset="utf-8">
<meta http-equiv="pragma" content="no-cache" />
<meta http-equiv="cache-control" content="max-age=604800" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Fleet Market</title>
<!-- jQuery -->
<script src="/js/jquery-2.0.0.min.js" type="text/javascript"></script>
<!-- Bootstrap4 files-->
<script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<link href="css/bootstrap.css" rel="stylesheet" type="text/css"/>
<!-- Font awesome 5 -->
<link href="/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">
<!-- custom style -->
<link href="/css/ui.css" rel="stylesheet" type="text/css"/>
<link href="/css/responsive.css" rel="stylesheet" type="text/css" />
<!-- custom javascript -->
<script src="/js/script.js" type="text/javascript"></script>

</head>
<body>
<!-- ============================ SECTION HEADER END   ================================= -->
<header class="section-header">
	<section class="header-main border-bottom">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-xl-2 col-lg-3 col-md-12">
					<a >
						<h4 class="title-section text-uppercase">Fleet Market</h4>
					</a> 
				</div>
				<div class="col-xl-6 col-lg-7 col-md-6">
				</div>
				<div class="col-xl-4 col-lg-5 col-md-6">
					<div class="widgets-wrap float-md-right">	
						<div class="widget-header mr-3">
							<p style="font-size: 18px; font-style: oblique ;"> Hi,<%= firstname %></p>
						</div>		
						<div class="widget-header mr-3">
							<a href="/sellerhome" class="widget-view">
								<div class="icon-area">
									<i class="fa fa-home" style="color: darkorange;"></i>
								</div>
								<small class="text"> Home </small>
							</a>
						</div>
						<div class="widget-header">
							<a href="/createproduct" class="widget-view">
								<div class="icon-area">
									<i class="fa fa-plus"style="color: darkorange;"></i>
								</div>
								<small class="text"> Add Product </small>
							</a>
						</div>
						<div class="widget-header mr-3">
							<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-user" style="color: darkorange;"></i> Accounts </a>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="/sellerprofile"><i class="fa fa-user-circle"></i> My Profile</a>
								<a class="dropdown-item" href="/logout"><i class="fa  fa-lock"></i>  Logout</a>
							</div>
							</a>
						</div>
					</div> 
				</div> 
			</div> 
		</div> 
	</section> 
</header>
<!-- ============================ SECTION HEADER END   ================================= -->

<!-- ============================ ADD PRODUCT   ================================= -->
	<div class="card mx-auto" style="max-width:520px; margin-top:40px;">
      	<article class="card-body">
			<header class="mb-4"><h4 class="card-title">Create Product</h4></header>
			<form method ="POST" action="/createproduct">
				<div class="form-row">
					<div class="col form-group">
						<label>Product Name</label>
					  	<input type="text" name="prdtname" class="form-control" placeholder=""style="text-transform: capitalize;"">
					</div>
				</div>
				<div class="form-group">
					<label>Description</label>
					<input type="text" name="descn" class="form-control" placeholder=""style="text-transform: capitalize;" >
				</div>
				<div class="form-row">
					<div class="col form-group">
						<label>Price</label>
					  	<input type="number"name="price" class="form-control" placeholder="">
					</div>
					<div class="col form-group">
						<label>Offer %</label>
					  	<input type="number" name="offerper"class="form-control" placeholder=" "onchange="handleChange(this);" >
					</div> 
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
					  <label>Category</label>
					  <select id="inputState" name ="category" class="form-control">
					    <option selected=""> Choose...</option>
					      <option>Grocery</option>
					      <option>Kitchen Accessories</option>
					      <option>Essentials</option>
					      <option>Beverages</option>
					  </select>
					</div>
					<div class="form-group col-md-6">
						<label>Qty</label>
						<input type="number"name ="qty" class="form-control">
					  </div>
				</div>
				<div class="form-row">
					<div class="col form-group">
						<label>Brand</label>
					  	<input type="text" name="brand" class="form-control" placeholder=""style="text-transform: capitalize;">
					</div>
				</div> 
				<div class="form-row">
					<div class="form-group col-md-6">
						<label>Shelf Life</label>
					    <input type="text" name="life" class="form-control" placeholder=""style="text-transform: capitalize;"">
					</div> 
					<div class="form-group col-md-6">
						<label>Image</label>
					    <input  type="file" name ="imgpath"accept="image/*">
					</div> 
				</div>
			    <div class="form-group">
			        <button type="submit" class="btn btn-primary btn-block"> Add Product  </button>
			    </div>  
			</form>
		</article>
	</div>
<!-- ========================= SECTION CONTENT END// ========================= -->

<script>
	function handleChange(input) {
	  if (input.value < 0) input.value = 1;
	  if (input.value > 100) input.value = 99;
	}
  </script>

<!-- ========================= FOOTER ========================= -->
<footer class="section-footer bg-secondary">
	<div class="container">
		<section class="footer-bottom text-center">		
				<p class="text-muted">Grocery ERP Management System </p>
		</section>
	</div>
</footer>
<!-- ========================= FOOTER END // ========================= -->
</body>
</html>

