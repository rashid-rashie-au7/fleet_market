<!DOCTYPE HTML>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="pragma" content="no-cache" />
<meta http-equiv="cache-control" content="max-age=604800" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Fleet Market</title>
<!-- jQuery -->
<script src="/js/jquery-2.0.0.min.js" type="text/javascript"></script>
<!-- Bootstrap4 files-->
<script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<link href="/css/bootstrap.css" rel="stylesheet" type="text/css"/>
<!-- Font awesome 5 -->
<link href="/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">
<!-- custom style -->
<link href="/css/ui.css" rel="stylesheet" type="text/css"/>
<link href="/css/responsive.css" rel="stylesheet" type="text/css" />
<!-- custom javascript -->
<script src="/js/script.js" type="text/javascript"></script>
</head>
<body>
<!-- ========================= SECTION CONTENT ========================= -->
<header class="section-header">
<section class="header-main border-bottom">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-xl-2 col-lg-3 col-md-12">
				<h2>Fleet Market</h2>
			</div>
			<div class="col-xl-6 col-lg-5 col-md-6">
				<form action="#" class="search-header">
					<div class="input-group w-100">
					    <input type="text" class="form-control" placeholder="Search">					    
					    <div class="input-group-append">
					      <button class="btn btn-primary" type="submit">
					        <i class="fa fa-search"></i> Search
					      </button>
					    </div>
				    </div>
				</form>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-6">
				<div class="widgets-wrap float-md-right">
					<div class="widget-header mr-3">
						<p style="font-size: 18px; font-style: oblique ;"> Hi, <%=firstname%></p>
					  </div>
				  	<div class="widget-header mr-3">
						<a href="/homebuyer" class="widget-view">
							<div class="icon-area">
								<i class="fa fa-home" style="color: darkorange;"></i>
							</div>
							<small class="text"> Home </small>
						</a>
					</div>
					<div class="widget-header">
						<a href="/mycart" class="widget-view">
							<div class="icon-area">
								<i class="fa fa-shopping-cart" style="color: darkorange;"></i>
								
							</div>
							<small class="text"> Cart </small>
						</a>
					</div>
					<div class="widget-header mr-3">
						<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-user" style="color: darkorange;"></i> Accounts </a>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="/myprofile"><i class="fa fa-user-circle"></i> My Profile</a>
							<a class="dropdown-item" href="/myorders"><i class="fa fa-store"></i> My Orders</a>
							<a class="dropdown-item" href="/mywishlist"><i class="fa fa-heart"></i>  Wishlist</a>
							<a class="dropdown-item" href="/logout"><i class="fa  fa-lock"></i>  Logout</a>
						  </div>
						</a>
					</div>
				</div> 
			</div> 
		</div> 
	</div> 
</section>
<nav class="navbar navbar-main navbar-expand-lg border-bottom">
	<div class="container">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="main_nav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="/category/?cat=Grocery">Grocery</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/category/?cat=Vegetables & Fruits">Vegetables & Fruits</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Kitchen Accessories">Kitchen Accessories</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Essentials">Essentials</a>
				</li>
				<li class="nav-item">
				   <a class="nav-link" href="/category/?cat=Beverages">Beverages</a>
				</li>
			</ul>
		</div> 
	</div> 
</nav>
</header>
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
	<div class="container">
		<% if( prdts.length != 0){ %>
		<div class="row">
		<% var tot_price = 0, tot_disc =0 , netamt= 0 %>	
		<%  var price = 0 , off =0, offer=0  %>
		<main class="col-md-9">
			<div class="card">
				<table class="table table-borderless table-shopping-cart">
					<thead class="text-muted">
						<tr class="small text-uppercase">
							<th scope="col">Product</th>
							<th scope="col" width="120">Quantity</th>
							<th scope="col" width="120">Price</th>
							<th scope="col" class="text-right" width="200"> </th>
						</tr>
					</thead>
				<% prdts.forEach(function(prdt) { %>
				<tbody>	
				<tr>
					<td>
						<figure class="itemside">
							<div class="aside"><img src="images/items/<%= prdt.imgpath %>" class="img-sm"></div>
							<figcaption class="info">
								<a href="#" class="title text-dark"><%= prdt.prdtname %> </a>
								<p class="small text-muted">Category:<%=prdt.catgy%>,  Brand:<%=prdt.brand%> </p>
							</figcaption>
						</figure>
					</td>
					<td>
						<% var qty = 0 %>
						<%cart.forEach(function(ele) {%>
						<% if(ele.prdtid == prdt.prdtid){ qty=ele.qty %>		
							<div class="input-group mb-3 input-spinner">
								<div class="input-group-prepend">
								<form action="/updateqty/?id=<%=ele.prdtid%>&flag=1" method="POST">
								  <button class="btn btn-light" type="submit" id="button-plus"> + </button> </form>
								</div>
								<input type="text" class="form-control" value="<%=qty%>">
								<div class="input-group-append">
									<form action="/updateqty/?id=<%=ele.prdtid%>&flag=0" method="POST">
								  <button class="btn btn-light" type="submit" id="button-minus"> &minus; </button></form>
								</div>
							</div>
						<%} %>
						<%});%>
					</td>
					<td> 
						<div class="price-wrap"> 
							<%  price = (prdt.price)*qty  %>
							<%  off = (prdt.offer)  %>
							<% 	offer = price - ((price* off)/100) %>
							<var class="price">₹ <%=(Math.round((offer)*2)/2 - 0.01) %></var> 
							<small class="text-muted">₹ <%=(price).toFixed(2)%></small> 
						</div>
					</td>
					<td class="text-right"> 
						<a href="/removecart/?id=<%=prdt.prdtid%>" class="btn btn-outline-primary"><i class="fa fa-trash"></i>  Remove</a>
					</td>
				</tr>				
			</tbody>
				<% tot_price = tot_price+price %>
				<% netamt= netamt+offer %>
				<% tot_disc = tot_price - netamt %>
			<% }); %>
			</table>
			<div class="card-body border-top">
				<a href="/checkout" class="btn btn-primary float-md-right"> Place Order <i class="fa fa-chevron-right"></i> </a>
				<a href="/homebuyer" class="btn btn-light"> <i class="fa fa-chevron-left"></i> Continue shopping </a>
			</div>	
			</div> 
			<div class="alert alert-success mt-3">
				<p class="icontext"><i class="icon text-success fa fa-truck"></i> Free Delivery within 1-2 weeks</p>
			</div>			
		</main>
		<aside class="col-md-3">
			<div class="card mb-3">
				<div class="card-body">
				<form>
					<div class="form-group">
						<label>Have coupon?</label>
						<div class="input-group">
							<input type="text" class="form-control" name="" placeholder="Coupon code">
							<span class="input-group-append"> 
								<button class="btn btn-primary">Apply</button>
							</span>
						</div>
					</div>
				</form>
				</div> 
			</div> 
			<div class="card">
				<div class="card-body">
						<dl class="dlist-align h6">
						<dt>Total price:</dt>
						<dd class="text-right h6">₹ <%=tot_price.toFixed(2)%> </dd>
						</dl>
						<dl class="dlist-align">
						<dt>Discount:</dt>
						<dd class="text-right">₹ <%=tot_disc.toFixed(2)%> </dd>
						</dl>
						<dl class="dlist-align h5">
						<dt>Total:</dt>
						<dd class="text-right  h5"><strong>₹ <%=(Math.round((netamt)*2)/2 - 0.01)%> </strong></dd>
						</dl>
						<hr>
						<p class="text-center mb-3">
							<img src="images/misc/payments.png" height="26">
						</p>			
				</div>
			</div> 
		</aside> 
		</div>	
		<% } else { %>
			<div style="text-align: center;margin-top: 25px;">
				<img src="images/emptyicons/empty-cart (1).png" style="justify-content:center;">	   
			</div>  
		<% } %>	
	
  		
</div>
</section>
<!--========================= SECTION CONTENT END// =========================
 ========================= FOOTER ========================= -->
<footer class="section-footer bg-secondary">
	<div class="container">
		<section class="footer-bottom text-center">
			<p class="text-muted"> Grocery ERP Managment System</p>
		</section>
	</div>
</footer>
<!-- ========================= FOOTER END // ========================= -->
</body>
</html>