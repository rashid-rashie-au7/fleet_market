<!DOCTYPE HTML>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="pragma" content="no-cache" />
<meta http-equiv="cache-control" content="max-age=604800" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<title>Fleet Market</title>
<!-- jQuery -->
<script src="/js/jquery-2.0.0.min.js" type="text/javascript"></script>
<!-- Bootstrap4 files-->
<script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<link href="/css/bootstrap.css" rel="stylesheet" type="text/css"/>
<!-- Font awesome 5 -->
<link href="/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">
<!-- custom style -->
<link href="/css/ui.css" rel="stylesheet" type="text/css"/>
<link href="/css/responsive.css" rel="stylesheet" type="text/css" />
<!-- custom javascript -->
<script src="/js/script.js" type="text/javascript"></script>
</head>
<body>
<!-- ========================= SECTION HEADER ========================= -->
<header class="section-header">
	<section class="header-main border-bottom">
	  	<div class="container">
			<div class="row align-items-center">
				<div class="col-xl-2 col-lg-3 col-md-12">
					<a> <h4 class="title-section text-uppercase"> Fleet Market </h4></a> 
				</div>
				<div class="col-xl-6 col-lg-5 col-md-6">
					<form action="#" class="search-header">
						<div class="input-group w-100">
							<input type="text" class="form-control" placeholder="Search">       
							<div class="input-group-append">
								<button class="btn btn-primary" type="submit">
									<i class="fa fa-search"></i> Search
								</button>
							</div>
						</div>
					</form> 
				</div> 
				<div class="col-xl-4 col-lg-4 col-md-6">
					<div class="widgets-wrap float-md-right">
						  <div class="widget-header mr-3">
							<a href="/" class="widget-view">
								<div class="icon-area">
									<i class="fa fa-home" style="color: darkorange;"></i>
								</div>
								<small class="text"> Home </small>
							</a>
						</div>
						<div class="widget-header">
							<a href="/loginbuyer" class="widget-view">
								<div class="icon-area">
									<i class="fa fa-shopping-cart" style="color: darkorange;"></i>
									<span class="notify">1</span>
								</div>
								<small class="text"> Cart </small>
							</a>
						</div>
						<div class="widget-header mr-3">
							<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-user" style="color: darkorange;"></i> Accounts </a>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="/loginbuyer"><i class="fa fa-user-circle"></i> My Profile</a>
								<a class="dropdown-item" href="/loginbuyer"><i class="fa fa-store"></i> My Orders</a>
                                <a class="dropdown-item" href="/loginbuyer"><i class="fa fa-heart"></i>  Wishlist</a>
                                <a class="dropdown-item" href="/register"><i class='fas fa-sign-out-alt'></i>Sign Up</a>
                                <a class="dropdown-item" href="/loginbuyer"><i class="fa  fa-unlock-alt"></i>  Log In</a>
                                <a class="dropdown-item" href="/loginseller"><i class="fa  fa-shopping-basket"></i>  Seller</a>
							  </div>
							</a>
						</div>
					</div> 
				</div> 
			</div> 
	  	</div> 
	</section>
	<nav class="navbar navbar-main navbar-expand-lg border-bottom">
	  	<div class="container">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="main_nav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/categorywise/?cat=Grocery">Grocery</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/categorywise/?cat=Vegetables & Fruits">Vegetables & Fruits</a>
					</li>
					<li class="nav-item">
					   <a class="nav-link" href="/categorywise/?cat=Kitchen Accessories">Kitchen Accessories</a>
					</li>
					<li class="nav-item">
					   <a class="nav-link" href="/categorywise/?cat=Essentials">Essentials</a>
					</li>
					<li class="nav-item">
					   <a class="nav-link" href="/categorywise/?cat=Beverages">Beverages</a>
					</li>
				</ul>
			</div> 
	  	</div> 
	</nav>
</header> 
<!-- ========================= SECTION HEADER END========================= -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
	<div class="container">
<% if(prdts.length != 0){ %>
		<div class="row">
			<main class="col-md-10">
				<header class="mb-3">
					<div class="form-inline">
						<strong class="mr-md-auto"><%= prdts.length%> Items found </strong>
					</div>
				</header>
				<% prdts.forEach(function(prdts){ %>
				<article class="card card-product-list">
					
					<div class="row no-gutters">
						<aside class="col-md-3">
							<a href="/productdetails/?id=<%=prdts.prdtid%>" class="img-wrap">
								<img src="/images/items/<%=prdts.imgpath%>">
							</a>
						</aside>
						<div class="col-md-6">
							<div class="info-main">
								<a href="#" class="h5 title"> <%=prdts.prdtname%></a>
								<p><%=prdts.descn%> </p>
							</div>
						</div> 
						<aside class="col-sm-3">
							<div class="info-aside">
								<%  var price = (prdts.price).toFixed(2) , off =prdts.offer, offer  %>
        						<% offer = price - ((price* off)/100) %>
								<div class="price-wrap">
									<span class="h4 price">₹ <%=Math.round(offer*2)/2 - 0.01%></span> 
									<small class="text-muted">/per item</small>
								</div> <!-- price-wrap.// -->
								<small class="text-warning" style="text-decoration: line-through;">₹ <%=price%></small>
								<p class="text-muted mt-3"><%=seller%></p>
								<div><p class="text mt-3">Product Code : <%=prdts.prdtid%></p></div>
								<div><p class="text mt-3">Seller : <%=seller.shop%></p></div>
								<div><p class="text mt-3">Brand : <%=prdts.brand%></p></div>			
							</div>
						</aside> 
					</div> 
					
				</article>
				<%})%>
			</main> 
		</div>
		<%}else{%>
			<div style="text-align: center;margin-bottom: 33px;margin-top: 33px;">
				<img src="/images/emptyicons/no-product-found.png" >	   
			</div> 
		<%}%>
	</div> 
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

<!-- ========================= FOOTER ========================= -->
<footer class="section-footer bg-secondary">
	<div class="container">	
		<section class="footer-bottom text-center">
			<p class="text-muted"> Grocery ERP Management System </p>
		</section>
	</div>
</footer>
<!-- ========================= FOOTER END // ========================= -->
</body>
</html>